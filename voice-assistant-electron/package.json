{
  "name": "voice-assistant-electron",
  "version": "1.0.0",
  "description": "Voice Assistant Desktop App for macOS",
  "main": "dist/main/index.js",
  "homepage": "./",
  "scripts": {
    "dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "npx tsc -p electron/main && vite build && electron-builder",
    "build:mac": "vite build && electron-builder --mac",
    "build:linux": "vite build && electron-builder --linux",
    "build:win": "vite build && electron-builder --win",
    "dist": "vite build && electron-builder --publish=never",
    "dist:mac": "vite build && electron-builder --mac --publish=never",
    "dist:linux": "vite build && electron-builder --linux --publish=never",
    "dist:win": "vite build && electron-builder --win --publish=never",
    "sign": "node scripts/sign.js",
    "sign:mac": "npm run build:mac && npm run sign",
    "notarize": "node scripts/notarize.js",
    "package:mac": "npm run build:mac && npm run sign && npm run notarize",
    "package:linux": "node scripts/generate-icons.js && npm run build:linux",
    "install:linux": "npm run package:linux && ./scripts/linux-integration.sh",
    "package:win": "node scripts/generate-icons.js && npm run build:win",
    "install:win": "npm run package:win && powershell -ExecutionPolicy Bypass -File scripts/windows-integration.ps1 -Install",
    "generate-icons": "node scripts/generate-icons.js",
    "preview": "vite preview",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@vitejs/plugin-react": "^4.0.0",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.0",
    "node-fetch": "^3.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "concurrently": "^8.0.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "electron-devtools-installer": "^3.2.0",
    "eslint": "^9.0.0",
    "wait-on": "^7.0.0"
  },
  "build": {
    "appId": "com.voice.assistant",
    "productName": "Voice Assistant",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "electron/main/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.productivity",
      "icon": "build/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "darkModeSupport": true,
      "minimumSystemVersion": "10.15.0"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "Utility",
      "icon": "build/icon.png",
      "desktop": {
        "Name": "Gon Voice Assistant",
        "Comment": "Your personal AI voice assistant",
        "Keywords": "voice;assistant;ai;llm;stt;tts",
        "StartupWMClass": "Gon Voice Assistant"
      }
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "dmg": {
      "sign": false,
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  },
  "keywords": [
    "voice-assistant",
    "electron",
    "macos",
    "ai",
    "llm",
    "stt",
    "tts"
  ],
  "author": "Voice Assistant Team",
  "license": "MIT"
}
