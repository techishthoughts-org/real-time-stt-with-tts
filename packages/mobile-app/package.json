{
  "name": "@voice/mobile-app",
  "version": "1.0.0",
  "description": "Gon Voice Assistant Mobile App - 2025 Edition",
  "main": "index.js",
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "start": "react-native start",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "build:android": "cd android && ./gradlew assembleRelease",
    "build:android:bundle": "cd android && ./gradlew bundleRelease",
    "build:ios": "cd ios && xcodebuild -workspace VoiceAssistant.xcworkspace -scheme VoiceAssistant -configuration Release -destination generic/platform=iOS -archivePath VoiceAssistant.xcarchive archive",
    "clean": "rm -rf node_modules && pnpm install",
    "clean:android": "cd android && ./gradlew clean",
    "clean:ios": "cd ios && xcodebuild clean",
    "pod:install": "cd ios && pod install",
    "pod:update": "cd ios && pod update",
    "security:audit": "pnpm audit --audit-level moderate",
    "security:fix": "pnpm audit fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json}\""
  },
  "dependencies": {
    "react": "18.2.0",
    "react-native": "0.73.6",
    "@react-native-community/voice": "^1.1.9",
    "react-native-tts": "^4.1.0",
    "react-native-audio-recorder-player": "^3.5.3",
    "react-native-permissions": "^4.1.5",
    "@expo/vector-icons": "^14.0.0",
    "react-native-gesture-handler": "^2.15.0",
    "react-native-reanimated": "^3.8.0",
    "react-native-safe-area-context": "^4.10.0",
    "react-native-screens": "^3.30.0",
    "@react-navigation/native": "^6.1.17",
    "@react-navigation/stack": "^6.4.1",
    "@react-navigation/bottom-tabs": "^6.6.1",
    "react-native-push-notification": "^8.1.1",
    "react-native-background-timer": "^2.4.1",
    "@react-native-async-storage/async-storage": "^1.23.1",
    "@react-native-community/netinfo": "^11.3.1",
    "react-native-sound": "^0.11.2",
    "react-native-linear-gradient": "^2.8.3",
    "react-native-svg": "^15.0.0",
    "lottie-react-native": "^6.6.0",
    "react-native-keychain": "^8.1.3",
    "react-native-device-info": "^10.12.0",
    "react-native-crypto": "^2.2.0",
    "react-native-ssl-pinning": "^1.0.0",
    "react-native-biometrics": "^3.0.1",
    "react-native-haptic-feedback": "^2.2.0",
    "react-native-splash-screen": "^3.3.0",
    "react-native-app-auth": "^6.0.2",
    "react-native-config": "^1.5.1",
    "react-native-crashlytics": "^3.3.7",
    "react-native-performance": "^5.0.0",
    "react-native-flipper": "^0.182.0",
    "zustand": "^4.5.0",
    "react-query": "^3.39.3",
    "react-hook-form": "^7.50.0",
    "react-native-elements": "^3.4.3",
    "react-native-vector-icons": "^10.0.3",
    "@voice/config": "workspace:*",
    "@voice/observability": "workspace:*",
    "@voice/schemas": "workspace:*"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "@babel/runtime": "^7.24.0",
    "@react-native/eslint-config": "^0.73.2",
    "@react-native/metro-config": "^0.73.5",
    "@tsconfig/react-native": "^3.0.3",
    "@types/react": "^18.3.12",
    "@types/react-test-renderer": "^18.0.7",
    "@testing-library/react-native": "^12.4.3",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/user-event": "^14.5.2",
    "babel-jest": "^29.7.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-native": "^4.1.0",
    "jest": "^29.7.0",
    "@react-native/babel-preset": "^0.73.21",
    "prettier": "^3.2.5",
    "react-test-renderer": "18.2.0",
    "typescript": "5.4.2",
    "@types/jest": "^29.5.12",
    "detox": "^20.17.0",
    "metro-react-native-babel-preset": "^0.77.0",
    "react-native-flipper": "^0.182.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },

  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false
  },
  "eslintConfig": {
    "extends": [
      "@react-native/eslint-config",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error",
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn",
      "react-native/no-inline-styles": "warn",
      "react-native/no-unused-styles": "error",
      "react-native/split-platform-components": "error"
    }
  }
}
